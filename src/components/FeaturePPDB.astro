---
const features = [
  "Formulir Pendaftaran & Upload Berkas Mandiri",
  "Nomor Pendaftaran Otomatis",
  "Manajemen Jalur (Zonasi, Prestasi, Afirmasi)",
  "Seleksi & Pengumuman Online Real-time",
  "Export Data Calon Siswa ke Excel",
];
---

<section
  id="ppdb"
  class="py-28 bg-slate-900 text-white relative overflow-hidden"
>
  <!-- Background Effects -->
  <div class="absolute inset-0">
    <div
      class="absolute top-0 left-1/4 w-96 h-96 bg-blue-500/10 rounded-full blur-3xl"
    >
    </div>
    <div
      class="absolute bottom-0 right-1/4 w-80 h-80 bg-purple-500/10 rounded-full blur-3xl"
    >
    </div>
    <div
      class="absolute inset-0 bg-[linear-gradient(rgba(255,255,255,0.02)_1px,transparent_1px),linear-gradient(90deg,rgba(255,255,255,0.02)_1px,transparent_1px)] bg-size-[60px_60px]"
    >
    </div>
  </div>

  <div class="container mx-auto w-full px-6 relative z-10">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-10 lg:gap-16 items-center">
      <!-- Content -->
      <div class="relative w-full">
        <span
          class="inline-block py-1.5 px-4 mb-6 text-sm font-semibold tracking-wider text-emerald-400 uppercase bg-emerald-400/10 border border-emerald-400/20 rounded-full"
        >
          Fitur PPDB
        </span>

        <h2
          class="text-3xl md:text-4xl lg:text-5xl font-bold mb-6 leading-tight"
        >
          Sistem PPDB yang
          <span
            class="bg-linear-to-r from-emerald-400 to-cyan-400 bg-clip-text wrap-normal break-normal whitespace-normal text-transparent"
            >Mengurangi Beban</span
          >
          Kerja Panitia
        </h2>

        <p class="text-slate-400 mb-10 text-lg leading-relaxed">
          Hadir dengan fitur lengkap yang dirancang khusus mengikuti alur
          pendaftaran sekolah di Indonesia.
        </p>

        <ul class="space-y-5 w-full max-w-lg px-2">
          {
            features.map((item, index) => (
              <li class="flex items-start gap-4 group">
                <div class="w-8 h-8 rounded-xl bg-linear-to-br from-emerald-500 to-cyan-500 flex items-center justify-center shrink-0 shadow-lg shadow-emerald-500/25 group-hover:scale-110 transition-transform">
                  <svg
                    class="w-4 h-4 text-white"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="3"
                      d="M5 13l4 4L19 7"
                    />
                  </svg>
                </div>
                <p class="text-base text-slate-300 group-hover:text-white transition-colors">
                  {item}
                </p>
              </li>
            ))
          }
        </ul>

        <a
          href="#demo"
          class="inline-flex items-center gap-2 mt-10 px-6 py-3 bg-linear-to-r from-emerald-500 to-cyan-500 text-white font-bold rounded-xl hover:shadow-xl hover:shadow-emerald-500/25 hover:-translate-y-1 transition-all duration-300"
        >
          <svg
            class="w-5 h-5"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M14.752 11.168l-3.197-2.132A1 1 0 0010 9.87v4.263a1 1 0 001.555.832l3.197-2.132a1 1 0 000-1.664z"
            ></path>
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
          Lihat Demo PPDB
        </a>
      </div>

      <!-- Dashboard Mockup -->
      <div class="relative">
        {/* Glow Effect */}
        <div
          class="absolute -inset-4 bg-linear-to-r from-emerald-500/20 to-cyan-500/20 rounded-3xl blur-2xl"
        >
        </div>

        <div
          class="relative bg-slate-800 p-2 rounded-3xl border border-slate-700 shadow-2xl"
        >
          <div class="rounded-2xl overflow-hidden border border-slate-600 overflow-x-auto">
            {/* Browser Header */}
            <div class="bg-slate-700 px-4 py-3 flex items-center gap-4">
              <div class="flex gap-2">
                <div class="w-3 h-3 rounded-full bg-red-500"></div>
                <div class="w-3 h-3 rounded-full bg-yellow-500"></div>
                <div class="w-3 h-3 rounded-full bg-green-500"></div>
              </div>
              <div
                class="flex-1 bg-slate-600/50 rounded-lg px-4 py-1 text-sm text-slate-400 font-mono text-center"
              >
                admin.sekolah.sch.id/ppdb
              </div>
            </div>

            {/* Dashboard Content */}
            <div class="p-6 max-sm:w-max bg-linear-to-br from-slate-800 to-slate-900">
              {/* Stats Grid */}
              <div class="grid grid-cols-3 gap-4 mb-6 *:max-sm:w-max">
                <div
                  class="bg-linear-to-br from-blue-600/20 to-blue-600/5 border border-blue-500/30 rounded-xl p-4 hover:border-blue-400/50 transition-colors"
                >
                  <div class="flex items-center gap-2 mb-2">
                    <div class="w-2 h-2 rounded-full bg-blue-400 animate-pulse">
                    </div>
                    <span class="text-xs text-blue-300 font-medium"
                      >Total Pendaftar</span
                    >
                  </div>
                  <div class="text-lg md:text-2xl font-bold text-white">
                    1,240
                  </div>
                  <div class="flex items-center gap-1 mt-1">
                    <svg
                      class="w-3 h-3 text-green-400"
                      fill="none"
                      stroke="currentColor"
                      viewBox="0 0 24 24"
                    >
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M5 10l7-7m0 0l7 7m-7-7v18"></path>
                    </svg>
                    <span class="text-xs text-green-400">12%</span>
                  </div>
                </div>
                <div
                  class="bg-linear-to-br from-emerald-600/20 to-emerald-600/5 border border-emerald-500/30 rounded-xl p-4 hover:border-emerald-400/50 transition-colors"
                >
                  <div class="flex items-center gap-2 mb-2">
                    <div
                      class="w-2 h-2 rounded-full bg-emerald-400 animate-pulse"
                    >
                    </div>
                    <span class="text-xs text-emerald-300 font-medium"
                      >Terverifikasi</span
                    >
                  </div>
                  <div class="text-lg md:text-2xl font-bold text-white">
                    850
                  </div>
                  <div class="text-xs text-emerald-400 mt-1">68.5% selesai</div>
                </div>
                <div
                  class="bg-linear-to-br from-amber-600/20 to-amber-600/5 border border-amber-500/30 rounded-xl p-4 hover:border-amber-400/50 transition-colors"
                >
                  <div class="flex items-center gap-2 mb-2">
                    <div
                      class="w-2 h-2 rounded-full bg-amber-400 animate-pulse"
                    >
                    </div>
                    <span class="text-xs text-amber-300 font-medium"
                      >Menunggu</span
                    >
                  </div>
                  <div class="text-lg md:text-2xl font-bold text-white">
                    390
                  </div>
                  <div class="text-xs text-amber-400 mt-1">Perlu review</div>
                </div>
              </div>

              {/* Progress Bar */}
              <div class="mb-6">
                <div class="flex justify-between text-sm mb-2">
                  <span class="text-slate-400">Progress Verifikasi</span>
                  <span class="text-emerald-400 font-bold">68.5%</span>
                </div>
                <div class="h-3 bg-slate-700 rounded-full overflow-hidden">
                  <div
                    class="h-full bg-linear-to-r from-emerald-500 to-cyan-500 rounded-full w-[68%] relative"
                  >
                    <div
                      class="absolute inset-0 bg-linear-to-r from-transparent via-white/20 to-transparent animate-shimmer"
                    >
                    </div>
                  </div>
                </div>
              </div>

              {/* Table Preview */}
              <div
                class="bg-slate-700/50 rounded-xl p-4 border border-slate-600/50"
              >
                <div class="flex justify-between items-center mb-4">
                  <span class="text-sm text-slate-300 font-medium"
                    >Pendaftar Terbaru</span
                  >
                  <span
                    class="text-xs text-blue-400 hover:underline cursor-pointer"
                    >Lihat Semua</span
                  >
                </div>
                <div class="space-y-3">
                  {
                    [1, 2, 3].map((i) => (
                      <div class="flex items-center gap-3 p-2 rounded-lg hover:bg-slate-600/30 transition-colors">
                        <div class="w-8 h-8 rounded-full bg-linear-to-br from-blue-500 to-indigo-500" />
                        <div class="flex-1">
                          <div class="h-3 bg-slate-600 rounded w-32 mb-1" />
                          <div class="h-2 bg-slate-700 rounded w-20" />
                        </div>
                        <div class="px-2 py-1 rounded-full bg-emerald-500/20 text-emerald-400 text-xs font-medium">
                          Verified
                        </div>
                      </div>
                    ))
                  }
                </div>
              </div>
            </div>
          </div>
          <p class="text-center text-xs text-slate-500 mt-4">
            Dashboard Monitoring Kepala Sekolah
          </p>
        </div>

        {/* Floating Notification */}
        <div
          class="absolute -left-8 top-1/3 bg-white rounded-xl shadow-2xl p-4 border border-slate-100 animate-bounce"
          style="animation-duration: 4s;"
        >
          <div class="flex items-center gap-3">
            <div
              class="w-10 h-10 bg-linear-to-br from-emerald-500 to-cyan-500 rounded-xl flex items-center justify-center"
            >
              <svg
                class="w-5 h-5 text-white"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
            </div>
            <div>
              <div class="text-sm font-bold text-slate-800">
                Verifikasi Berhasil!
              </div>
              <div class="text-xs text-slate-500">NISN: 0012345678</div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  @keyframes shimmer {
    0% {
      transform: translateX(-100%);
    }
    100% {
      transform: translateX(100%);
    }
  }
  .animate-shimmer {
    animation: shimmer 2s infinite;
  }
</style>
