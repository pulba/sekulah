---
const features = [
  { text: "Website Profil Sekolah Custom", icon: "globe" },
  { text: "Sistem PPDB Online Full Fitur", icon: "clipboard" },
  { text: "Hosting & Domain (Tahun Pertama)", icon: "server" },
  { text: "Panduan Penggunaan Operator", icon: "book" },
  { text: "Tanpa Biaya per Siswa / Bulan", icon: "check" },
];

const icons = {
  globe: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9"></path>`,
  clipboard: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"></path>`,
  server: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 12h14M5 12a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v4a2 2 0 01-2 2M5 12a2 2 0 00-2 2v4a2 2 0 002 2h14a2 2 0 002-2v-4a2 2 0 00-2-2m-2-4h.01M17 16h.01"></path>`,
  book: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>`,
  check: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>`,
};
---

<section
  id="pricing"
  class="py-28 bg-linear-to-b from-slate-50 to-white relative overflow-hidden"
>
  <!-- Background Decorations -->
  <div
    class="absolute top-1/4 left-0 w-96 h-96 bg-linear-to-r from-blue-100/50 to-indigo-100/50 rounded-full blur-3xl -translate-x-1/2"
  >
  </div>
  <div
    class="absolute bottom-1/4 right-0 w-80 h-80 bg-linear-to-r from-purple-100/50 to-pink-100/50 rounded-full blur-3xl translate-x-1/2"
  >
  </div>

  <div class="container mx-auto px-6 relative z-10">
    <div class="text-center max-w-3xl mx-auto mb-16">
      <span
        class="inline-block py-1.5 px-4 mb-6 text-sm font-semibold tracking-wider text-blue-600 uppercase bg-blue-50 border border-blue-100 rounded-full"
      >
        Investasi Terbaik
      </span>
      <h2 class="text-3xl md:text-5xl font-bold mb-6 text-slate-900">
        Investasi Aset Digital
        <span
          class="bg-linear-to-r from-blue-600 to-indigo-600 bg-clip-text text-transparent"
          >Permanen</span
        >
      </h2>
      <p class="text-slate-600 text-lg leading-relaxed">
        Satu harga untuk semua fitur, tanpa biaya tersembunyi. Milik Anda
        selamanya.
      </p>
    </div>

    <div class="max-w-xl mx-auto relative">
      {/* Glow Effect */}
      <div
        class="absolute -inset-4 bg-linear-to-r from-blue-500/20 via-indigo-500/20 to-purple-500/20 rounded-4xl blur-2xl"
      >
      </div>

      {/* Main Card */}
      <div
        class="relative bg-white p-10 rounded-3xl border-2 border-blue-200 shadow-2xl"
      >
        {/* Badge */}
        <div class="absolute w-max -top-5 left-1/2 -translate-x-1/2">
          <div
            class="bg-linear-to-r from-blue-600 to-indigo-600 text-white px-6 py-2 rounded-full text-sm font-bold shadow-lg shadow-blue-500/25 flex items-center gap-2"
          >
            <svg
              class="w-4 h-4"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M13 10V3L4 14h7v7l9-11h-7z"></path>
            </svg>
            SEKALI BAYAR
          </div>
        </div>

        {/* Header */}
        <div class="text-center mb-10 pt-4">
          <h3 class="text-2xl font-bold text-slate-900 mb-2">
            Paket Digitalisasi Sekolah
          </h3>
          <p class="text-slate-500">
            Solusi lengkap untuk transformasi digital sekolah Anda
          </p>
          <h3 class="text-xl line-through font-bold text-red-900 mb-2">
            Rp5 Juta
          </h3>
          <h3 class="text-3xl font-bold text-blue-900 mb-2">
            Rp1.999K
          </h3>
        </div>

        {/* Features */}
        <ul class="space-y-5 mb-10">
          {
            features.map((item) => (
              <li class="flex items-center gap-4 group">
                <div class="w-10 h-10 rounded-xl bg-linear-to-br from-blue-500 to-indigo-500 flex items-center justify-center shrink-0 shadow-md shadow-blue-500/20 group-hover:scale-110 transition-transform">
                  <svg
                    class="w-5 h-5 text-white"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <Fragment set:html={icons[item.icon]} />
                  </svg>
                </div>
                <span class="text-slate-700 font-medium">{item.text}</span>
              </li>
            ))
          }
        </ul>

        {/* Divider */}
        <div class="border-t border-slate-100 my-8"></div>

        {/* Price Comparison */}
        <div class="text-center mb-8">
          <div class="text-sm text-slate-500 mb-2">
            <span class="line-through"
              >Biaya langganan tahunan: Rp3.000.000/tahun</span
            >
          </div>
          <div class="text-sm text-emerald-600 font-semibold">
            Hemat hingga Rp15.000.000 dalam 5 tahun!
          </div>
        </div>

        {/* CTA */}
        <a
          href="https://wa.link/pw418p"
          class="group block w-full py-5 bg-linear-to-r from-blue-600 to-indigo-600 text-white font-bold rounded-xl hover:shadow-2xl hover:shadow-blue-500/25 hover:-translate-y-1 transition-all duration-300 text-center relative overflow-hidden"
        >
          <span
            class="absolute inset-0 bg-linear-to-r from-indigo-600 to-purple-600 opacity-0 group-hover:opacity-100 transition-opacity duration-300"
          ></span>
          <span class="relative flex items-center justify-center gap-2">
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path
                d="M.057 24l1.687-6.163c-1.041-1.804-1.588-3.849-1.587-5.946.003-6.556 5.338-11.891 11.893-11.891 3.181.001 6.167 1.24 8.413 3.488 2.245 2.248 3.481 5.236 3.48 8.414-.003 6.557-5.338 11.892-11.893 11.892-1.99-.001-3.951-.5-5.688-1.448l-6.305 1.654zm6.597-3.807c1.676.995 3.276 1.591 5.392 1.592 5.448 0 9.886-4.434 9.889-9.885.002-5.462-4.415-9.89-9.881-9.892-5.452 0-9.887 4.434-9.889 9.884-.001 2.225.651 3.891 1.746 5.634l-.999 3.648 3.742-.981zm11.387-5.464c-.074-.124-.272-.198-.57-.347-.297-.149-1.758-.868-2.031-.967-.272-.099-.47-.149-.669.149-.198.297-.768.967-.941 1.165-.173.198-.347.223-.644.074-.297-.149-1.255-.462-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.297-.347.446-.521.151-.172.2-.296.3-.495.099-.198.05-.372-.025-.521-.075-.148-.669-1.611-.916-2.206-.242-.579-.487-.501-.669-.51l-.57-.01c-.198 0-.52.074-.792.372s-1.04 1.016-1.04 2.479 1.065 2.876 1.213 3.074c.149.198 2.095 3.2 5.076 4.487.709.306 1.263.489 1.694.626.712.226 1.36.194 1.872.118.571-.085 1.758-.719 2.006-1.413.248-.695.248-1.29.173-1.414z"
              ></path>
            </svg>
            Ajukan Penawaran 
          </span>
        </a>

        {/* Trust Note */}
        <p
          class="text-center text-sm text-slate-500 mt-6 flex items-center justify-center gap-2"
        >
          <svg
            class="w-4 h-4 text-emerald-500"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"
            ></path>
          </svg>
          Garansi 30 hari uang kembali
        </p>
      </div>
    </div>
  </div>
</section>
