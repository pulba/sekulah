---
import { Image } from "astro:assets";
import smpImage from "../assets/smp.webp";
import smaImage from "../assets/sma.webp";
import smkImage from "../assets/smk.webp";

const schoolProducts = [
  {
    name: "Paket Website SMP",
    level: "SMP",
    price: "Rp1.999K",
    image: smpImage,
    link: "https://template-smp-new.pages.dev/",
    description:
      "Sistem PPDB Zonasi & Profil Sekolah modern untuk tingkat Pertama.",
    gradient: "from-blue-500 to-cyan-500",
    features: [
      "Website Responsif",
      "PPDB Online",
      "Galeri Kegiatan",
      "Berita Sekolah",
    ],
  },
  {
    name: "Paket Website SMA",
    level: "SMA",
    price: "Rp1.999K",
    image: smaImage,
    link: "https://template-sma.pages.dev/",
    description:
      "Fokus pada integrasi data Alumni, PTN, dan Prestasi Akademik.",
    gradient: "from-indigo-600 to-blue-500",
    features: [
      "Portal Alumni",
      "Statistik PTN",
      "PPDB Online",
      "Dashboard Admin",
    ],
    popular: true,
  },
  {
    name: "Paket Website SMK",
    level: "SMK",
    price: "Rp1.999K",
    image: smkImage,
    link: "https://template-smk.pages.dev/",
    description:
      "Fitur khusus Manajemen Jurusan dan Portal Bursa Kerja Khusus.",
    gradient: "from-purple-600 to-indigo-500",
    features: ["Portal BKK", "Info Jurusan", "PPDB Online", "Prakerin"],
  },
];
---

<section
  class="py-28 bg-linear-to-b from-white to-slate-50 relative overflow-hidden"
>
  <!-- Background -->
  <div
    class="absolute inset-0 bg-[linear-gradient(rgba(0,0,0,0.02)_1px,transparent_1px),linear-gradient(90deg,rgba(0,0,0,0.02)_1px,transparent_1px)] bg-size-[60px_60px]"
  >
  </div>

  <div class="container mx-auto px-6 relative z-10">
    <div class="text-center max-w-3xl mx-auto mb-20">
      <span
        class="inline-block py-1.5 px-4 mb-6 text-sm font-semibold tracking-wider text-indigo-600 uppercase bg-indigo-50 border border-indigo-100 rounded-full"
      >
        Pilih Jenjang
      </span>
      <h2 class="text-3xl md:text-5xl font-bold mb-6 text-slate-900">
        Paket Sesuai
        <span
          class="bg-linear-to-r from-indigo-600 to-purple-600 bg-clip-text text-transparent"
          >Jenjang Sekolah</span
        >
      </h2>
      <p class="text-slate-600 text-lg leading-relaxed">
        Setiap paket dirancang khusus untuk memenuhi kebutuhan spesifik tingkat
        pendidikan.
      </p>
    </div>

    <div class="grid md:grid-cols-3 gap-8 max-w-6xl mx-auto">
      {
        schoolProducts.map((item) => (
          <div
            class={`group relative ${item.popular ? "md:-mt-4 md:mb-4" : ""}`}
          >
            {/* Popular Badge */}
            {item.popular && (
              <div class="absolute -top-4 left-1/2 -translate-x-1/2 z-20">
                <span class="bg-linear-to-r from-indigo-600 to-purple-600 text-white text-xs font-bold px-4 py-1.5 rounded-full shadow-lg">
                  PALING POPULER
                </span>
              </div>
            )}

            {/* Card Glow */}
            <div
              class={`absolute -inset-1 bg-linear-to-r ${item.gradient} rounded-3xl blur-xl opacity-0 group-hover:opacity-40 transition duration-500`}
            />

            <div
              class={`relative bg-white rounded-2xl overflow-hidden border-2 transition-all duration-500 h-full flex flex-col ${item.popular ? "border-indigo-300 shadow-2xl shadow-indigo-500/10" : "border-slate-100 hover:border-indigo-200 shadow-sm hover:shadow-2xl"}`}
            >
              {/* Header with Level Badge */}
              <div class="relative h-48 overflow-hidden">
                <div class="absolute inset-0">
                  <Image
                    src={item.image}
                    alt={item.name}
                    class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-110"
                  />

                  <div class="absolute inset-0 bg-black/10" />
                </div>

                <div class="relative z-10 p-8 text-center h-full flex flex-col justify-center">
                  <div class="w-20 h-20 mx-auto mb-4 bg-white/20 backdrop-blur-sm rounded-2xl flex items-center justify-center border border-white/30">
                    <span class="text-3xl font-black text-white">
                      {item.level}
                    </span>
                  </div>
                  <h3 class="text-xl font-bold text-white">{item.name}</h3>
                </div>
              </div>

              {/* Pricing */}
              <div class="p-8 text-center border-b border-slate-100">
                <div class="inline-flex items-baseline gap-1">
                  <span class="text-4xl font-black text-slate-900">
                    {item.price}
                  </span>
                  <span class="text-slate-400 text-sm">/sekali bayar</span>
                </div>
                <p class="text-slate-500 text-sm mt-3 leading-relaxed">
                  {item.description}
                </p>
              </div>

              {/* Features */}
              <div class="p-8 grow">
                <ul class="space-y-4">
                  {item.features.map((feature) => (
                    <li class="flex items-center gap-3 text-slate-700">
                      <div
                        class={`w-5 h-5 rounded-full bg-linear-to-r ${item.gradient} flex items-center justify-center shrink-0`}
                      >
                        <svg
                          class="w-3 h-3 text-white"
                          fill="none"
                          stroke="currentColor"
                          viewBox="0 0 24 24"
                        >
                          <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="3"
                            d="M5 13l4 4L19 7"
                          />
                        </svg>
                      </div>
                      <span class="font-medium">{feature}</span>
                    </li>
                  ))}
                </ul>
              </div>

              {/* CTA Button */}
              <div class="p-8 pt-0">
                <a href="https://wa.link/pw418p" target="_blank">
                  <button
                    class={`w-full py-4 px-6 text-white font-bold rounded-xl shadow-lg transition-all duration-300 bg-linear-to-r ${item.gradient} hover:shadow-xl hover:-translate-y-1 active:scale-95`}
                  >
                    Pesan Sekarang
                  </button>
                </a>
                <a href={item.link} target="_blank" class="block w-full mt-3">
                  <button class="w-full py-3 px-6 text-slate-600 font-medium rounded-xl border border-slate-200 hover:border-indigo-300 hover:text-indigo-600 transition-colors cursor-pointer">
                    Lihat Detail
                  </button>
                </a>
              </div>
            </div>
          </div>
        ))
      }
    </div>
  </div>
</section>
